<section role="main" class="content-body">
    <header class="page-header">
        <h2>Product Table</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Tables</span></li>
                <li><span>Product Table</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="#" class="fa fa-caret-down"></a>
                <a href="#" class="fa fa-times"></a>
            </div>

            <h2 class="panel-title">Order Products Detail</h2>
        </header>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-md">
                        
                    </div>
                </div>
            </div>
            <table class="table table-bordered table-striped mb-none">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr class="gradeX">
                        <td>{{this.productId.name}}</td>
                        <td style="text-align: center;"><img style="width:10%; height:auto; " src="/assets/images/products/{{this.productId.imageCover}}" alt="" srcset=""></td>
                        <td>{{this.productId.price}} $</td>
                        <td>{{this.quantity}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="col-md-12 col-md-offset-6" style="margin-top: 20px;">
                <a class="btn btn-primary" href="/orders">Back</a>
            </div>
        </div>
    </section>
    <!-- end: page -->
</section>
