<section role="main" class="content-body">
    <header class="page-header">
        <h2>Order Forms</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Forms</span></li>
                <li><span>Order</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Form Order</h2>
                </header>
                <div class="panel-body">
                    <form class="form-horizontal form-bordered" method="post" action="/orders/{{order._id}}">
                        <fieldset>
                            {{#if type}}
                            <div class="span2 offset2 alert alert-success" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                                <strong>Success!</strong> Update profile successfully!
                            </div>

                            {{/if}}
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="name">Name</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{order.userId.name}}" name="name"
                                        required="required" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="email">Email</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{order.userId.email}}" name="email"
                                        required="required" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="phone">Created at</label>
                                <div class="col-md-8">
                                    <input type="tel" class="form-control" name="phone" required="required"
                                        value="{{formatDate 'MM/DD/YYYY' order.createdAt}}" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="address">Address</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="address" required="required"
                                        value="{{order.address}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="phone">Phone</label>
                                <div class="col-md-8">
                                    <input type="tel" class="form-control" name="phone" required="required"
                                        value="{{order.phone}}" pattern="[0-9]{10}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="price">Total Price</label>
                                <div class="col-md-8">
                                    <input type="number" class="form-control" name="price" required="required"
                                        value="{{order.cart.totalPrice}}" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Status</label>
                                <div class="col-sm-9">
                                    <select id="status" name="status" class="form-control" size="3">
                                        <option value="pending" (eq {{this.status.pending}} 'pending')? 'selected' : ''>Pending</option>
                                        <option value="completed" (eq {{this.status.pending}} 'completed')? 'selected' : ''>Completed</option>
                                        <option value="canceled" (eq {{this.status.pending}} 'canceled')? 'selected' : ''>Canceled</option>
                                    </select>
                                    <label class="error" for="brands"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary" value="submit">Submit</button>
                                    <a class="btn btn-default" href="/orders">Back</a>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>

<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 2000);
</script>